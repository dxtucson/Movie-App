<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/poster_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.17" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:text="Movie Title"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/add_favorite"
        app:layout_constraintStart_toEndOf="@+id/poster_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="2019"
        app:layout_constraintStart_toEndOf="@+id/poster_image"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/genre_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/genre_background"
        android:text="Comedy"
        android:textColor="@color/colorAccent"
        android:textSize="11sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/poster_image"
        app:layout_constraintTop_toBottomOf="@+id/add_favorite" />

    <TextView
        android:id="@+id/genre_2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/genre_background"
        android:text="Adventure"
        android:textColor="@color/colorAccent"
        android:textSize="11sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/genre_1"
        app:layout_constraintTop_toBottomOf="@+id/add_favorite" />

    <TextView
        android:id="@+id/genre_3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/genre_background"
        android:text="Documentary"
        android:textColor="@color/colorAccent"
        android:textSize="11sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/genre_2"
        app:layout_constraintTop_toBottomOf="@+id/add_favorite" />

    <ImageButton
        android:id="@+id/add_favorite"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@drawable/icons8_favorite_folder"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/genre_4"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/genre_background"
        android:text="Action"
        android:textColor="@color/colorAccent"
        android:textSize="11sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/genre_3"
        app:layout_constraintTop_toBottomOf="@+id/add_favorite" />

</androidx.constraintlayout.widget.ConstraintLayout>